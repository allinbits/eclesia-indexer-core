{
    "include": ["src/**/*"],
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "target": "ES2020",
      "module": "CommonJS",
      "sourceMap": true,
      "declaration": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "isolatedModules": true,
      "allowArbitraryExtensions": true
    }
  }